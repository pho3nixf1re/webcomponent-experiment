{
  "name": "webcomponent-experiment",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS='--loader ts-node/esm' webpack serve --mode development",
    "start": "serve dist -l 3000",
    "build": "webpack",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint '**/*.ts' --ext .ts --ext .js",
    "lint:css": "stylelint '**/*.css'",
    "format": "npm run format:eslint && npm run format:stylelint && npm run format:prettier",
    "format:eslint": "prettier --write '**/*.{ts,js}'",
    "format:stylelint": "stylelint '**/*.css' --fix",
    "format:prettier": "prettier --write '**/*.{ts,js,css}'"
  },
  "dependencies": {
    "classcat": "^5.0.4",
    "lit": "^3.0.2",
    "ramda": "^0.29.1",
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/postcss-pxtorem": "^6.0.3",
    "@types/ramda": "^0.29.9",
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-server": "^4.7.2",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "autoprefixer": "^10.4.16",
    "css-loader": "^6.8.1",
    "eslint": "^8.55.0",
    "eslint-plugin-lit": "^1.10.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.4",
    "postcss-loader": "^7.3.3",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^3.1.1",
    "style-loader": "^3.3.3",
    "stylelint": "^16.0.2",
    "stylelint-order": "^6.0.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
